{
    "name": "cms-orbit/video-field",
    "version": "1.1.3",
    "description": "A comprehensive video upload and multi-encoding system for CMS-Orbit with streaming support, transcoding, and thumbnails",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "xiso",
            "email": "ceo@amuz.co.kr"
        }
    ],
    "require": {
        "php": "^8.2",
        "amuz/cms-orbit": "^3.1.3",
        "intervention/image": "^3.0",
        "symfony/process": "^7.0",
        "league/flysystem": "^3.0",
        "php-ffmpeg/php-ffmpeg" : "^1.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CmsOrbit\\VideoField\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CmsOrbit\\VideoField\\VideoServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (class_exists('CmsOrbit\\\\VideoField\\\\VideoServiceProvider')) { (new CmsOrbit\\\\VideoField\\\\VideoServiceProvider(app()))->publishLibraries(); }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (class_exists('CmsOrbit\\\\VideoField\\\\VideoServiceProvider')) { (new CmsOrbit\\\\VideoField\\\\VideoServiceProvider(app()))->publishLibraries(); }\""
        ]
    }
}
